.legend(ng-controller='LegendCtrl', ng-model='frame.results.graph')
  ul.unstyled
    li(ng-repeat='rule in rules | filter:isNode')
      a.preview(ng-style='{"background-color": rule.props.color, "border-color": rule.props["border-color"]}')
        .shade
      .contents.no-condition
        .class-name {{rule.selector.klass || 'Default'}} ({{count[rule.selector.klass]}})
        .condition
