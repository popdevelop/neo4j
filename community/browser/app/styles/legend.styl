@import 'variables'
@import 'nib'
@import 'mixins'

.legend
  height: middlebar-height
  background-color: #EEF1F8
  border-bottom: 1px solid #DFE5F0

  .label.label-node
    padding: 10px
    border-radius: 20px
    font-size: 12px
    padding: 6px 15px
    margin-right: 6px
    .count
      font-weight: normal

  ul
    padding: 6px 9px
    li
      &.faded
        opacity: 0.3
      .preview
        preview-size = 29px
        float: left
        border-radius: 50%
        display: inline-block
        width: preview-size
        height: preview-size
        margin-right: 8px
        .shade
          stretch()
          background-color: #fff
          width: (preview-size / 2px)
          opacity: 0.10

      .contents
        //overflow: hidden
        float: left
        line-height: 1em
        position: relative
        top: 3px
        &.no-condition
          top: -1px
          line-height: 30px
        .condition
          font-size: 10px
          color: #888
      .remove
        display: none
        padding: 2px 8px
        margin-left: 12px
      &:hover .remove
          display: inline-block
