@import 'variables'
@import 'nib'
@import 'mixins'

.legend
  background-color: #EEF1F8
  border-bottom: 1px solid #DFE5F0

  .attribute
    user-select: none
    display: inline-block
    padding: 1px 6px
    font-size: 12px
    background-color: rgba(0, 0, 0, 0);
    color: #9195A0;
    border: 1px solid #595D66;
    max-width: 100px;
    overflow: hidden;
    border-radius: .25em;
    margin-right: 6px;
    margin-bottom: 6px;
    font-weight: bold;
    &:hover
      border-color: #FFF;
      color: #FFF;

  .label
    padding: 10px
    font-size: 12px
    margin-right: 5px
    cursor: pointer
    &.label-node
      padding: 4px 9px
      border-radius: 20px
    &.label-relationship
      padding: 4px 6px
      border-radius: 3px

    .count
      font-weight: normal

  .type
    float: left
    line-height: 35px
    width: 90px
    margin: 0 12px
    color: #525864

  .caption
    float: left
    margin-right: 5px
    font-size: 12px
    font-weight: bold
    line-height: 21px

  > ul
    padding: 7px 9px 2px
    padding-left: 115px
    &.list-labels
      border-bottom: 1px dashed #d2d5da
    > li
      display: inline-block
      &.faded
        opacity: 0.3
      .preview
        preview-size = 29px
        float: left
        border-radius: 50%
        display: inline-block
        width: preview-size
        height: preview-size
        margin-right: 8px
        .shade
          stretch()
          background-color: #fff
          width: (preview-size / 2px)
          opacity: 0.10

      .contents
        //overflow: hidden
        float: left
        line-height: 1em
        position: relative
        top: 3px
        top: -1px
        line-height: 24px
      .remove
        display: none
        padding: 2px 8px
        margin-left: 12px
      &:hover .remove
          display: inline-block
