@import 'variables'
@import 'nib'
@import 'mixins'

#editor
  cursor: text
  user-select: none
  min-height: 72px
  background-color: #fff
  position: relative
  top: 0
  left: 0
  right: 0
  z-index: 100
  box-shadow: 0 1px 4px rgba(0,0,0,0.1)

  .file-bar
    color: #fff
    height: 39px
    display: none
    background: #69707E
    line-height: 39px
    padding: 0 24px
    overflow: hidden
    &.enabled
      display: block
    .title
      display: block;
      line-height: 39px
      font-size: 13px
      font-weight: bold
      .btn-save {
        margin-left: 8px;
        border: none;
      }
      .file-bar-close {
        float: right;
        font-size: 20px;
        padding: 8px;
        margin-right: -17px;
        color: #fff;
      }
      .edited
        font-size: 10px;
        position: relative;
        top: -2px
        left: 9px
        color: #7ACAFF
      &:before
        color: #fdcc59
        padding-right: 1px
    .actions
      float: right
      padding-top: 9px
      a
        float: right
        transist: all 0.15s
        line-height: 30px
        text-align: center
        border-radius: 3px
        color: #E7E9EB
        &.button
          padding: 0 14px
          font-size: 13px
          font-weight: bold
          margin-right: 6px
          color: #E7E9EB
          border: 2px solid #E7E9EB
          line-height: 26px
        &.icon
          background: rgba(0,0,0,0.4)
          font-size: 18px
          width: 30px
        &:hover
          color: #333946
          background: #E7E9EB

  .starred
    display: none
    position: absolute
    &.enabled
      display: block


  textarea
    opacity: 0 // avoid being displayed before CodeMirror has loaded

  .view-editor
    transist: min-height
    min-height: 0%
    overflow-y: auto
    position: relative

  .message-bar
    height: 49px
    line-height: 49px
    padding: 0 24px
    color: #FFF
    overflow: hidden
    position: relative
    a
      color: #fff
    .actions
      a
        font-size: 18px
        position: absolute
        right: 16px
        line-height: 30px
        width: 30px
        text-align: center
        border-radius: 3px
        border: none
        &:hover
          background-color: rgba(0,0,0,0.4)
    i
      border-bottom: 1px dotted #FFF
    code
      border: none
      background-color: #fff
    &.error
      background-color: color-error
      code
        color: color-error
        cursor: pointer
    &.info
      background-color: color-link
      code
        color: color-link

  ul.controls
    z-index: 1000
    absolute: top 20px right 16px
    .divider
      margin: 0 6px
      width: 1px
      padding: 0
      background-color: #E4E9F1
    a.balled
      transist: all 0.2s
      transform: scale(1)
      box-shadow: inset 0 2px 2px rgba(0, 0, 0, 0.1)
      text-shadow: 0 1px 0px rgba(0, 0, 0, 0.1)
      color: #fff
      border: 2px solid white
      background-color: #E5E5E7
      cursor: default
      display: inline-block
      width: 34px
      height: 34px
      text-align: center
      border-radius: 50%
      vertical-align: middle

      &.active
        cursor: pointer
        box-shadow: none
        text-shadow: none
        color: #BABABB
        border: 2px solid #BCBEC0
        background-color: #fff

        &:hover
          transform: scale(1.2)

        &.success
          &:hover
            color: color-success
            border: 2px solid color-success
        &.golden
          &.enabled
            color: #fff
            background-color: color-star
            border: 2px solid darken(color-star, 8%)
          &.changed
            background-color: #fff
            color: color-star
            border: 2px solid darken(color-star, 8%)
          &:hover
            color: #fff
            background-color: color-star
            border: 2px solid darken(color-star, 8%)
        &.add
          &:hover
            color: color-link
            border: 2px solid color-link

      [class*="fa-"]
        font-size: 18px
        line-height: 32px
        position: relative
        &.fa-play
          font-size: 16px
          left: 1px
        &.fa-star
          font-size: 19px
