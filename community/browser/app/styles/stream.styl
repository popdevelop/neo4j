@import 'variables'
@import 'nib'
@import 'mixins'

#stream
  padding-bottom: 60px
  padding-top: 24px
  position: relative
  overflow-y: auto

  .frame
    overflow: hidden

    .btn.btn-small
      background: #FFF

    &:hover
      .code-bar .actions
        opacity: 1

    .row.header
      padding-top: 24px

    .inner
      position: relative
      margin: 0 24px 24px 24px
      border: 1px solid #D2D7DD
      border-radius: 3px
      background-color: #fff

      .view-result
        position: relative
        height: auto
        background: #F8F9FB
        z-index: 10

        a[class^="icon-"]
          color: color-default-text
          &:hover
            color: color-link

        .view-result-graph
          background-color: #F1F3F8
          svg
            height: 400px
            width: 100%
          a.icon-table
            font-size: 24px
            absolute: bottom 57px right horizontal-padding

        .view-result-table
          border-top: 1px solid #fff
          position: relative
          overflow-y: auto
          max-height: 359px
          a.icon-download-alt
            absolute: top 8px right horizontal-padding*2+20
            font-size: 24px
            right: horizontal-padding

        .view-result-error
          pre
            font-family: mono-font-family
            font-size: 14px
            padding: 12px 16px
            margin: 0
            background: none
            border: none
    footer
      position: relative
      padding: 0
      p
        margin: 0

.code-bar
  background: #fff
  color: stream-font-color
  height: middlebar-height
  line-height: middlebar-height
  padding-left: horizontal-padding
  margin: 0 25px
  //overflow: hidden
  position: relative

  .label
    font-size: 11px
    border-radius: 0px
    padding: 4px 9px
  .label-cypher
    background-color: #8FDDC7
  .label-rest
    background-color: #81C0EB
  .label-help
    background-color: #D2A8E9

  .code
    text-shadow: 0 1px 0 rgba(255,255,255,0.7)
    font-family: mono-font-family
    font-size: 12px
    margin-left: 11px
    color: #525864
    &:hover
      cursor: pointer
      border-bottom: 1px dotted #B6ADAD
      padding-bottom: 2px
  a.close-fullscreen
    display: none

  .status
    float: left
    display: block
    max-height: 30px
    overflow: hidden
    max-width: 400px
    text-overflow: ellipsis
    white-space: nowrap
  .actions
    float: right
    opacity: 1.0
    a
      transist: all 0.2s
      float: left
      border-left: 1px solid #E6E9EF
      padding: 9px 13px
      height: 39px
      font-size: 16px
      vertical-align: center
      position: relative
      color: #9B9DA2
      &:hover
        background: #40454f
        color: #fff
      &.icon-download-alt
        padding-top: 12px
      &.icon-fullscreen
        padding-top: 12px
        font-size: 15px
      &.icon-remove
        padding-top: 11px
    .btn
      margin-left: 4px
