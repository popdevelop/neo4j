@import 'variables'
@import 'nib'
@import 'mixins'

#stream
  padding-bottom: 60px
  padding-top: 24px
  position: relative
  overflow-y: auto

  .frame
    overflow: hidden

    .btn.btn-small
      background: #FFF

    &:hover
      .code-bar .actions
        opacity: 1

    .row.header
      padding-top: 24px

    .inner
      position: relative
      margin: 0 24px 24px 24px
      border-radius: 3px
      background-color: #fff

      .view-result
        position: relative
        height: auto
        background: #F8F9FB
        z-index: 10

        a[class*="fa-"]
          color: color-default-text
          &:hover
            color: color-link

        .view-result-graph
          background-color: #F9FBFD
          svg
            height: 400px
            width: 100%
          a.fa-table
            font-size: 24px
            absolute: bottom 57px right horizontal-padding

          .graph-contents
            position: relative
            overflow: hidden

        .view-result-table
          border-top: 1px solid #fff
          position: relative
          overflow-y: auto
          max-height: 359px
          a.fa-download
            absolute: top 8px right horizontal-padding*2+20
            font-size: 24px
            right: horizontal-padding

        .view-result-error
          pre
            font-family: mono-font-family
            font-size: 14px
            padding: 12px 16px
            margin: 0
            background: none
            border: none
    footer
      position: relative
      padding: 0
      p
        margin: 0

.code-bar
  background: #fff
  color: stream-font-color
  height: middlebar-height
  line-height: middlebar-height
  padding-left: 10px
  margin: 0 24px
  position: relative
  border-bottom: 1px solid #e6e9ef

  .label
    font-size: 11px
    border-radius: 0px
    padding: 4px 7px
    border: 2px solid
    background: none
    color: #525864
    border-color: #525864
  .label-cypher
    color: #8FDDC7
    border-color: #8FDDC7
  .label-rest
    background-color: #81C0EB
  .label-help
    color: #D2A8E9
    border-color: #D2A8E9

  .mono
    font-family: mono-font-family
    font-size: 12px
    color: #525864
  .prompt
    margin-left: 1px
    margin-right: 5px
    opacity: 0.5
    font-weight: bold
  .code
    margin-left: 3px
    &:hover
      cursor: pointer
      border-bottom: 1px dotted #B6ADAD
      padding-bottom: 2px
  a.close-fullscreen
    display: none

  .status
    display: block
    max-height: 33px
    overflow: hidden
    max-width: 400px
    text-overflow: ellipsis
    white-space: nowrap

.actions
  float: right
  opacity: 1.0
  a
    transist: all 0.2s
    float: left
    border-left: 1px solid #E6E9EF
    padding-top: 11px
    height: 39px
    font-size: 16px
    vertical-align: center
    position: relative
    color: #9B9DA2
    width: 42px
    text-align: center
    &:hover
      background: #40454f
      color: #fff
    &.active, &.active:hover {
      color: #30333a
      cursor: default
      position: relative
      top: -1px
      background: #F9FBFD
      &.fa-table {
        background: #fff;
      }
    }
    &.fa-download
      padding-top: 12px
    &.fa-fullscreen
      padding-top: 12px
      font-size: 15px
  .btn
    margin-left: 4px
