@import 'nib'
@import 'mixins'

html, body
  margin 0
  padding 0
  -webkit-font-smoothing: antialiased

*
  word-wrap: break-word
  outline: none

body
  font: 13px 'Helvetica Neue', Helvetica, Arial, sans-serif
  // background: #222
  background: rgba(34,34,34,0.95);
  color: #fff
  stretch()
  overflow: hidden

//html
//  background: radial-gradient(ellipse at center, rgba(34,34,34,0.91) 0%,rgba(34,34,34,1) 100%);

.wrapper
  width: 380px
  margin: 0 auto
  margin-top: 26%

h1
  text-align: center
  font-size: 25px
  font-weight: normal
  margin: 0 0 36px

.btn
  margin: 0
  text-decoration: none
  text-align: center
  display: block
  vertical-align: middle
  zoom: 1
  border-radius: 6px
  box-shadow: none
  transition-property: background
  transition-duration: 0.3s
  text-shadow: none
  border: none
  padding: 12px

  font-size: 19px
  background: transparent
  color: #fff
  border: 2px solid #fff
